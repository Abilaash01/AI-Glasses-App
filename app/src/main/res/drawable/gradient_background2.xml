<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Base color -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#3279a8" />
        </shape>
    </item>

    <!-- Circle shape with a radial gradient for the blur effect at the top left -->
    <item android:top="-200dp" android:left="-300dp">
        <shape android:shape="oval">
            <size
                android:width="100dp"
                android:height="100dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="1000dp"
                android:startColor="#FFFFFF"
                android:endColor="#00FFFFFF"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>

    <!-- Circle shape with a radial gradient for the blur effect at the top right -->
    <item android:top="200dp" android:right="20dp">
        <shape android:shape="oval">
            <size
                android:width="100dp"
                android:height="100dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="120dp"
                android:startColor="#FFFFFF"
                android:endColor="#00FFFFFF"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>

</layer-list>
